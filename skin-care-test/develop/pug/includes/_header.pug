if (isMainPage)
	.main-page-header#main-page-header
		.main-page-logo
			img.main-page-logo__img._normal(src="images/logotype-big.svg", alt="")
			img.main-page-logo__img._colored(src="images/logotype-big-colored.svg", alt="")
		.main-page-logo-mobile
			img.main-page-logo-mobile__img._normal(src="images/logo-horizontal.svg", alt="")
			img.main-page-logo-mobile__img._colored(src="images/logo-horizontal-colored.svg", alt="")
		nav.main-page-menu
			ul.main-page-menu__list
				li.main-page-menu__item
					a.main-page-menu__link(href="#") О нас
				li.main-page-menu__item
					a.main-page-menu__link(href="#") Советы
				li.main-page-menu__item
					a.main-page-menu__link(href="#") FAQ
		.main-page-user
			span.main-page-user__link.js-show-popup(data-popup="#popup-authorization")
